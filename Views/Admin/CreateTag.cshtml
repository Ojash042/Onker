
@model List<Tag>
@{
    ViewData["Title"] = "Create Tag";
}
<div class="container align-items-center my-3">
	<ul class="list-group">
		<li class="list-group-item active">Available Tags</li>
	@{
		foreach(var item in Model) {
			<li class="list-group-item">@item.TagName</li>	
		}
	}

	</ul>
</div>

<h4 class="px-3">Create a tag</h4>
<div class="container align-items-center">
	<form method="post" asp-controller="Admin" asp-action="CreateTagPost">
		<div class="form-floating mb-3">
			<input name="tagName" id="tagName" class="form-control" />
			<label class="form-label" for="tagName">Tag Name</label>
		</div>
		<button type="submit" class="btn btn-primary">Submit</button>
	</form>
</div>

